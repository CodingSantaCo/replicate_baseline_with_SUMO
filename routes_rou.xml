<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- vTypes：不改 -->
    <vType id="CV" 
          length="6.44" 
          minGap="0" 
          maxSpeed="13.89" 
          accel="2.6" 
          decel="4.5" 
          sigma="0"
          color="red"
          carFollowModel="Krauss"
          guiShape="passenger"/>

    <vType id="NC" 
          length="6.44" 
          minGap="0" 
          maxSpeed="13.89" 
          accel="2.6" 
          decel="4.5" 
          sigma="0"
          color="blue"
          carFollowModel="Krauss"
          guiShape="passenger"/>

    <!-- 路线：不改 -->
    <route id="route_lane7_north" edges="lane7 intertonorth"/> 

    <!-- 按 40%/60% 随机分配 CV / NC（合并为单一 flow 时使用） -->
