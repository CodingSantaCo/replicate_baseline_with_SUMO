    <!-- 合并后的混合随机输入（总需求 415 veh/h = 166+249） -->
    <flow id="mixed_flow_north" 
          type="mixType" 
          route="route_lane7_north" 
          begin="0" 
          end="3600" 
          vehsPerHour="415"
          departLane="0" 
          departSpeed="max"
          departPos="base"/>
</routes>